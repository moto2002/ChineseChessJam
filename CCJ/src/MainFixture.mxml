<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
			   xmlns:s="library://ns.adobe.com/flex/spark"
			   xmlns:mx="library://ns.adobe.com/flex/mx"
			   width="500"
			   height="600"
			   xmlns:parsley="http://www.spicefactory.org/parsley"
			   preinitialize="application1_preinitializeHandler(event)"
			   initialize="application1_initializeHandler(event)"
			   creationComplete="application1_creationCompleteHandler(event)"
			   xmlns:impl="com.godpaper.impl.*">
	<fx:Script>
		<![CDATA[
			import com.godpaper.configs.BoardConfig;
			import com.godpaper.configs.CCJContextConfig;

			import mx.events.FlexEvent;
			import mx.logging.LogEventLevel;

			[Bindable]private var logFilters:Array=["*"];

			protected function application1_preinitializeHandler(event:FlexEvent):void
			{
				BoardConfig.xLines = 9;
				BoardConfig.yLines = 10;
				BoardConfig.xOffset = 50;
				BoardConfig.yOffset = 50;
				BoardConfig.width = 450;
				BoardConfig.height = 500;
				BoardConfig.xScale = 1;
				BoardConfig.yScale = 1;
			}

			protected function application1_initializeHandler(event:FlexEvent):void
			{
			}

			protected function application1_creationCompleteHandler(event:FlexEvent):void
			{
				// TODO Auto-generated method stub
//				var pgnLoader:URLLoader = new URLLoader(new URLRequest("assets/pgn/sample.PGN"));
//				pgnLoader.addEventListener(Event.COMPLETE,function():void
//				{
//					trace(pgnLoader.data);
//				});
			}

		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
		<!---
			The context for bootstrapping the whole Parsley framework.
		-->
		<parsley:ContextBuilder config="{CCJContextConfig}"/>

		<!---
			The system unique logging component provider LOG.debug/info/warn/error/fatal avenues.
		-->
		<mx:TraceTarget id="traceTarget"
						fieldSeparator="->"
						includeCategory="true"
						includeDate="false"
						includeLevel="true"
						includeTime="true"
						level="{LogEventLevel.DEBUG}"
						filters="{logFilters}">
		</mx:TraceTarget>
	</fx:Declarations>
	<!---
		Vistual elements at stage here.
	-->
	<s:VGroup width="100%" height="100%">
		<impl:ChessBoardDefault id="defaultChessBoard"/>
	</s:VGroup>
</s:Application>
