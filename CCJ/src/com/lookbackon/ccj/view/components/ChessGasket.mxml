<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/halo" 
		 width="50" height="50"
		 implements="com.lookbackon.ccj.view.components.IChessGasket" 
		 creationComplete="group1_creationCompleteHandler(event)" 
		 >
	<fx:Script>
		<![CDATA[
			import mx.core.IUIComponent;
			import mx.core.IVisualElement;
			import mx.events.DragEvent;
			import mx.events.FlexEvent;
			import mx.managers.DragManager;
			//--------------------------------------------------------------------------
			//
			//  Properties(implement)
			//
			//--------------------------------------------------------------------------
			private var _position:Array;
			public function get position():Array
			{
				return _position;
			}
			public function set position(value:Array):void
			{
				_position = value;
			}
			//--------------------------------------------------------------------------
			//
			//  Methods
			//
			//--------------------------------------------------------------------------
			//group1_creationCompleteHandler
			protected function group1_creationCompleteHandler(event:FlexEvent):void
			{
				// TODO Auto-generated method stub
				this.addEventListener(DragEvent.DRAG_ENTER,dragEnterHandler);
				this.addEventListener(DragEvent.DRAG_DROP,dragDropHandler);
			}
			//dragEnterHandler
			private function dragEnterHandler(event:DragEvent):void
			{
				DragManager.acceptDragDrop(event.currentTarget as IUIComponent);
				DragManager.showFeedback(DragManager.LINK);
			}
			//dragDropHandler
			private function dragDropHandler(event:DragEvent):void
			{
				//FIXME:after next move should remove previous element.
//				this.addElement(event.dragInitiator as IVisualElement);
				event.dragInitiator.move(this.x,this.y);
//				event.currentTarget.addElement(event.dragInitiator as IVisualElement);
			}

		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:Rect width="100%" height="100%">
		<s:stroke>
			<s:SolidColorStroke color="blue"/>
		</s:stroke>
		<s:fill>
			<s:SolidColor color="blue"/>
		</s:fill>
	</s:Rect>
</s:Group>
