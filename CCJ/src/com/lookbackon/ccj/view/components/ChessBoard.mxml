<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/halo" 
		 xmlns:degrafa="com.degrafa.*" 
		 xmlns:repeaters="com.degrafa.geometry.repeaters.*" 
		 xmlns:paint="com.degrafa.paint.*" 
		 xmlns:geometry="com.degrafa.geometry.*" 
		 xmlns:transform="com.degrafa.transform.*">
	<s:layout>
		<s:VerticalLayout/>
	</s:layout>
	<fx:Script>
		<![CDATA[
			//--------------------------------------------------------------------------
			//
			//  Imports
			//
			//--------------------------------------------------------------------------
			import mx.graphics.SolidColorStroke;
			//--------------------------------------------------------------------------
			//
			//  Variables
			//
			//--------------------------------------------------------------------------
			//----------------------------------
			//  CONSTANTS
			//----------------------------------
			private static const SCALE_XY:Number		= 1.5;
			private static const TOTAL_H_LINES:Number 	= 10;
			private static const TOTAL_V_LINES:Number 	= 9;
			private static const BOARD_WIDTH:Number 	= 400*SCALE_XY;
			private static const BOARD_HEIGHT:Number 	= 450*SCALE_XY;
			private static const LATTICE_WIDTH:Number	= 50*SCALE_XY;
			//----------------------------------
			//  private
			//----------------------------------
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<!-- Notice that the Repeater is inside a Halo container. -->
	<degrafa:Surface>
		<degrafa:strokes>
			<paint:SolidStroke id="blackStroke" color="#000" weight="2"/>
		</degrafa:strokes>
		<!-- Horizontal lines and Vertical lines. -->
		<degrafa:GeometryGroup>
			<repeaters:HorizontalLineRepeater count="{TOTAL_H_LINES}" stroke="{blackStroke}" x="0" x1="{BOARD_WIDTH}" y="0" moveOffsetY="{LATTICE_WIDTH}"/> 
			<repeaters:VerticalLineRepeater count="{TOTAL_V_LINES}" stroke="{blackStroke}" y="0" y1="{BOARD_HEIGHT}" x="0" moveOffsetX="{LATTICE_WIDTH}"/> 
		</degrafa:GeometryGroup>
		<!-- Intersect lines . -->
		<degrafa:GeometryGroup>
			<geometry:Line x="{LATTICE_WIDTH*3}" y="0" x1="{LATTICE_WIDTH*5}" y1="{LATTICE_WIDTH*2}" stroke="{blackStroke}">
			</geometry:Line>
			<geometry:Line x="{LATTICE_WIDTH*5}" y="0" x1="{LATTICE_WIDTH*3}" y1="{LATTICE_WIDTH*2}" stroke="{blackStroke}">
			</geometry:Line>
			<geometry:Line x="{LATTICE_WIDTH*3}" y="{BOARD_HEIGHT}" x1="{LATTICE_WIDTH*5}" y1="{BOARD_HEIGHT-100*SCALE_XY}" stroke="{blackStroke}">
			</geometry:Line>
			<geometry:Line x="{LATTICE_WIDTH*5}" y="{BOARD_HEIGHT}" x1="{LATTICE_WIDTH*3}" y1="{BOARD_HEIGHT-100*SCALE_XY}" stroke="{blackStroke}">
			</geometry:Line>
		</degrafa:GeometryGroup>
	</degrafa:Surface>
</s:Group>
